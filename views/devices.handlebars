<div class="container py-4">
  <h2 class="mb-4 text-primary">Listado de Dispositivos</h2>
  {{#if dispositivos.length}}
    <table class="table table-striped table-bordered rounded shadow-sm">
      <thead class="table-primary">
        <tr>
          <th>Nombre</th>
          <th>Estado</th>
          <th>Última conexión</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each dispositivos}}
        <tr>
          <td>{{this.nombre}}</td>
          <td>{{this.estado}}</td>
          <td>{{this.ultima_conexion}}</td>
          <td>
            <a href="/devices/{{this.id}}" class="btn btn-sm btn-outline-primary">Detalles</a>
            <!-- Puedes agregar botones para editar, eliminar, etc. -->
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p class="text-muted">No tienes dispositivos registrados.</p>
  {{/if}}

  <a href="/" class="btn btn-secondary mt-3">Volver al inicio</a>
</div>
