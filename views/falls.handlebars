<div class="container py-4">
  <h2 class="mb-4 text-danger">Listado de Caídas</h2>
  {{#if caidas.length}}
    <table class="table table-striped table-bordered rounded shadow-sm">
      <thead class="table-danger">
        <tr>
          <th>Fecha</th>
          <th>Descripción</th>
          <th>Dispositivo</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each caidas}}
        <tr>
          <td>{{this.fecha}}</td>
          <td>{{this.descripcion}}</td>
          <td>{{this.dispositivo_nombre}}</td>
          <td>
            <!-- Ejemplo: botón para ver detalles o borrar -->
            <a href="/falls/{{this.id}}" class="btn btn-sm btn-outline-danger">Detalles</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p class="text-muted">No se encontraron caídas registradas.</p>
  {{/if}}

  <a href="/" class="btn btn-secondary mt-3">Volver al inicio</a>
</div>
